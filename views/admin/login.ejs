<!--
 *  Similarly to registration, logging can fail or succeed which is
 *  described in the status: string, and expressed  to user by message: string
 *  it can also receive the email and password values that are passed on get request if found in session.
-->
<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
        <div id="homepage">
            <form method="POST">
                <div class="form-style-5">
                    <form method="POST">
                        <fieldset>
                            <h2 style="margin-bottom: 30px; margin-top: 30px;"> Logowanie administratora </h2>
                            <input type="email" name="email" placeholder= "Adres email">
                            <input type="password" name="password" placeholder= "Hasło">
                        </fieldset>
                        <% if ( locals.message && locals.status ) { %>
                            <% if (locals.status === 'success') { %>
                                <div class= "message success"> <%= locals.message %></div>
                            <% } else if (locals.status === 'info') { %>
                                <div class= "message info"> <%= locals.message %></div>
                            <% } else  { %>
                                <div class= "message error"> <%= locals.message %></div>
                            <% } %>
                        <% } %>
                        <input type="submit" value="Zaloguj"/>
                    </form>
                </div>
            </form>
        </div>
    </div>
